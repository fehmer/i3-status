{
  "name": "i3-status",
  "version": "0.1.7",
  "description": "A highly customizable i3wm status bar",
  "main": "lib/index.js",
  "bin": "./lib/index.js",
  "scripts": {
    "prepublish": "npm run compile",
    "compile": "babel src/ -d lib -s",
    "test": "node_modules/mocha/bin/mocha --compilers js:babel-register test --recursive --reporter gitlablist-mocha",
    "watch": "npm run compile && (babel -w src/ -d lib -s &) && node_modules/mocha/bin/mocha --compilers js:babel-register test --recursive  --reporter min --watch",
    "coverage": "nyc --reporter json-summary npm run test",
    "coverage-check": "nyc report && nyc check-coverage"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:fehmer/i3-status.git"
  },
  "babel": {
    "presets": [
      "latest"
    ]
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "keywords": [
    "i3",
    "i3wn",
    "i3status",
    "i3blocks",
    "i3-bar"
  ],
  "author": "Christian Fehmer",
  "license": "MIT",
  "dependencies": {
    "aes256": "^1.0.2",
    "bytes": "^2.4.0",
    "commander": "^2.9.0",
    "deep-map": "^1.5.0",
    "diskusage": "^1.1.1",
    "moment": "^2.17.1",
    "moment-duration-format": "^1.3.0",
    "read-yaml": "^1.0.0",
    "winston": "^2.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-preset-latest": "^6.16.0",
    "chai": "^4.0.2",
    "chai-string": "^1.4.0",
    "codacy-coverage": "^2.0.0",
    "concat-stream": "^1.5.2",
    "gitlablist-mocha": "^1.0.2",
    "i3-status-starter": "^0.1.1",
    "mocha": "^3.2.0",
    "nyc": "^15.1.0",
    "sinon": "^1.17.6"
  }
}
